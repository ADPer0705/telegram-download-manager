# Telegram Download Manager Configuration

[telegram]
# OPTION 1: Bot Token (Easiest - just need a bot token)
# Get from @BotFather on Telegram
# Uncomment the line below and add your bot token:
# bot_token = YOUR_BOT_TOKEN_HERE

# OPTION 2: User API Credentials (Full access)
# Get from https://my.telegram.org/
# Uncomment the lines below and add your credentials:
# api_id = YOUR_API_ID
# api_hash = YOUR_API_HASH
# phone = YOUR_PHONE_NUMBER

# OPTION 3: Demo Mode (No credentials needed - for testing)
# Uncomment the line below:
# demo_mode = true

[downloads]
download_path = ./downloads
max_concurrent_downloads = 3
chunk_size = 1048576
retry_attempts = 5
retry_delay = 5

[logging]
log_level = INFO
log_file = logs/telegram_downloader.log
